@model AdvAgen.Models.IndexViewModel
@using Microsoft.AspNet.Identity;
@{
    
    ViewBag.Title = "Управление";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            [@Html.ActionLink("Смена пароля", "ChangePassword")]
        </dd> 
        <dt>Информация:</dt>
        <dd>
            [@Html.ActionLink("Редактировать", "../Customer/Edit", new { id = User.Identity.GetUserId()})}]
        </dd>        
    </dl>
</div>
