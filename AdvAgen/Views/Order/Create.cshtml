@model AdvAgen.Models.order

@{
    ViewBag.Title = "Create";
}

<h2>Создание</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Заказ на рекламу &laquo;@ViewBag.o.advertisingName&raquo;</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.advertisingName)
     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <!----input type="submit" value="Создать" class="btn btn-default" /-->
                <button type="submit" name="advertisingName" value="@ViewBag.o.advertisingName">Создать</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно к списку предложений", "../Advertising")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
